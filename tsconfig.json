{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@modules/*": ["./app/modules/*"],
      "@shadcn-ui/*": ["./app/components/ui/*"],
      "@my-components/*": ["./app/components/lib/*", "./app/components/utils/*"],

      "@router-types/*": [".react-router/types/app/routes/+types/*"],
    },
    "esModuleInterop": true,
    // "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
